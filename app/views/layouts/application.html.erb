<!DOCTYPE html>
<html>
  <head>
    <title>FriendsBook</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <nav>
      <div> <%= button_to "Posts", posts_path, method: :get %> </div>
      <div> <%= button_to "Sign_Out", destroy_user_session_path, method: :delete %> </div>
      <div> <%= button_to "Users", users_path, method: :get %> </div>
      <% if user_signed_in? %>
        <% if current_user.friend_requests.count > 0%>
        <div><%= button_to "Request", users_path, method: :get %></div>
        <% end %>
      <% end %>
    </nav>
    <%= yield %>
  </body>
</html>
